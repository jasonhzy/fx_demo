<?php
// database host
$local = $_SERVER["HTTP_HOST"];
if(in_array($local,array('127.0.0.1','127.0.0.1:8080','localhost','localhost:8080','192.168.1.189:8080'))){
	$db_host   = "localhost:3306";
	
	// database name
	$db_name   = "fenyong_db";
	
	// database username
	$db_user   = "root";
	
	// database password
	$db_pass   = "123456"; 
}else{
	$db_host   = "localhost:3306";
	$db_name   = "fenyong";
	$db_user   = "root";
	$db_pass   = "";
}
// table prefix
$prefix    = "gz_";

date_default_timezone_set('Asia/Shanghai');
?>
